@model webapp4_mvc.Models.Broker

@{
    ViewData["Title"] = "Edit";
}
<style>
     .Signup{
    display: none !important;
    }
</style>

<h1 style="font-family:monospace">Edit Broker</h1>


<hr />
<div class="row" style="font-family:monospace">
    <div class="col-md-4">
        <form asp-action="Edit">
